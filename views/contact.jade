extends layout

block content
  link(rel='stylesheet', href='/stylesheets/contact.css')
  script(type='text/javascript', src='/javascripts/submit-contact.js')
  script(type='text/JavaScript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js')
  .container
    form(id='contact', action='contact', method='post')

      h3 Leave Us A Message
      fieldset
        input(placeholder='First Name', name='firstname', type='text', tabindex='1', required='', autofocus='')
      fieldset
        input(placeholder='Last Name', name='lastname', type='text', tabindex='2', required='')
      fieldset
        input(placeholder='Email', name='email', type='email', tabindex='3', required='')
      fieldset
        input(placeholder='Phone', name='phone' type='tel', tabindex='4')
      fieldset
        textarea(placeholder='Leave a message...', name='message', tabindex='5', required='')
      fieldset(style='text-align: center;')
        button(type='submit') Submit
